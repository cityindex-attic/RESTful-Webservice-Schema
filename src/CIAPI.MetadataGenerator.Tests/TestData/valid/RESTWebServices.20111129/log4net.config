<?xml version="1.0"?>

<!DOCTYPE log4net [
  <!ENTITY rollingLogFileLocation "C:\Logs\RESTWebServices.log">
  <!ENTITY throttlingLogFileLocation "C:\Logs\ThrottlingLog.log">
  <!ENTITY rollingLogFile_Level "DEBUG">
]>

<log4net>
  <!-- ###  STANDARD SETTINGS; DON'T EDIT ### -->
  <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
    <threshold value="&rollingLogFile_Level;" />
    <file value="&rollingLogFileLocation;" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true" />
    <datePattern value="yyyyMMdd" />
    <rollingStyle value="Date" />
    <maximumFileSize value="25MB" />
    <maxSizeRollBackups value="-1" /><!-- never delete log files -->
    <layout type="log4net.Layout.PatternLayout">
      <ConversionPattern value="%-5p %d %t %c %m%n" />
    </layout>
  </appender>
  <appender name="ThrottlingLoggerFile" type="log4net.Appender.RollingFileAppender">
    <threshold value="&rollingLogFile_Level;" />
    <file value="&throttlingLogFileLocation;" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true" />
    <datePattern value="yyyyMMdd" />
    <rollingStyle value="Date" />
    <maximumFileSize value="100MB" />
    <maxSizeRollBackups value="-1" />
    <!-- never delete log files -->
    <layout type="log4net.Layout.PatternLayout">
      <ConversionPattern value="%-5p %d %t %c %m%n" />
    </layout>
  </appender>
  <appender name="VSNET" type="log4net.Appender.TraceAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5p %d %t %c %m%n" />
    </layout>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="RollingFile" />
    <appender-ref ref="VSNET" />
  </root>

  <logger name="ThrottlingLogger">
    <level value="INFO"/>
    <appender-ref ref="ThrottlingLoggerFile"/>
  </logger>
</log4net>